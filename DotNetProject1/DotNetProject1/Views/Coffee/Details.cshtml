@{
    var coffee = (CoffeeModel) ViewData["Coffee"];
}

<body>
<div>
    @if (coffee != null)
     {
         <table class="table table-striped align-middle">
             <tr>
                 <th>ID</th>
                 <th>Description</th>
                 <th>Portion</th>
                 <th>Image</th>
                 <th>Price</th>
             </tr>
             <tr>
                 <td>@coffee.id</td>
                 <td>@coffee.description</td>
                 <td>@coffee.portionSize g</td>
                 <td><img src=@coffee.image height="100" width="100" alt=""/></td>
                 <td>@coffee.price</td>
             </tr>
         </table>
         
         <div class="text-center mt-5"><a class="" asp-area="" asp-controller="Coffee" asp-action="Index">Return to Coffee List</a></div>
     }
     else
     {
         <h1 class="text-center mt 2">Error 404</h1>
         <div class="text-center mt-5"><a class="" asp-area="" asp-controller="Coffee" asp-action="Index">Return to Coffee List</a></div>
     }
</div>
</body>