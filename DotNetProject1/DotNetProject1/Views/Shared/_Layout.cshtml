<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Books and Coffee store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand navbar-light bg-light mb-5">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand mb-0 h1">
                <span class="ml-2 mr-5">Coffee and Books Store</span>
            </a>
            <ul class="navbar-nav mr-auto">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="nav-link active">About Us</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Coffee" asp-action="Index" class="nav-link active">Coffee Store</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Books" asp-action="Index" class="nav-link active">Book Store</a>
                </li>
            </ul>
            <form>
                <input type="text" placeholder="Search" class="form-control">
            </form>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>