@{ 
    var product = (ProductModel)ViewData["Product"];
}

<table class="table">
    <tbody>
        <tr>
            <td>Id</td>
            <td>@product.Id</td>
        </tr>
        <tr>
            <td>Title</td>
            <td>@product.Title</td>
        </tr>
        <tr>
            <td>Description</td>
            <td>@product.Description</td>
        </tr>
        <tr>
            <td>Price</td>
            <td>SAR @product.Price</td>
        </tr>
        <tr>
            <td>Category</td>
            <td>@product.Category.Title</td>
        </tr>
        <tr>
            <td>Image</td>
            <td>
                <img src="@product.Image" alt="@product.Title" width="150" height="150" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <a href="~/Products" class="btn btn-primary">Back</a>
            </td>
        </tr>
    </tbody>
</table>