
@{
    var prd = (ClotheModel)ViewData["Product"];
}

@{
    if (prd != null)
    {

        <div class="container">
            <div class="row">
                <div class="col-6">
                    <img src=@prd.img alt=@prd.Name width="400px">
                </div>
                <div class="col-6">
                    <h5 style="margin-top:200px;">@prd.Name</h5>
                    <p >Price : @prd.Price</p>
                    <p >Gender : @prd.gender</p>
                    <a href="/Buys" class="btn btn-primary">Buy</a>
                </div>
            </div>
        </div>

    }
    else
    {
        <div>
            <h3 style="color:red; font-weight:bold;">Product not found</h3>
        </div>
    }
}