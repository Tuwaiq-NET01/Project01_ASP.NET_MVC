
@{
    ViewData["Title"] = "Flowers";
    var prds = (List<ProductModel>)ViewData["Products"];
    Layout = "WebLayout";
}
<center>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" href="/Home"><img style="height:30px; width:30px;" src="https://cdn0.iconfinder.com/data/icons/flowers-and-leaves/47/flower_9-512.png" /></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Products/Flowers">Flowers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Privacy">Privacy</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/CustomerReviews">Customers Reviews</a>
            </li>
        </ul>
    </nav>
</center>

<h1 style="color: #ff8080; font-family: 'Arial Nova'; font-style: italic;"><center>Flowers</center></h1>

@foreach (var prod in prds)
{
<center>
    <div>
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-header"><img style="width:200px; height:200px" src="@prod.Image" alt="@prod.Image" /></div>
            <div class="card-body">
                <p class="card-text">
                    <p><b>ID:</b> @prod.ID</p>
                    <p><b>Name:</b> @prod.Name</p>
                    <p><b>Price:</b> @prod.Price</p>
                </p>
            </div>
            <div class="card-footer">
                <p class="card-text"><a href="/Products/Details/@prod.ID"> <button type="button" class="btn btn-danger"> Show </button></a></p>
            </div>
        </div>
    </div>
</center>
}
