@{
    var tvShowList = (List<TvShowModel>) ViewData["TvShows"];
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
     <div style=" justify-content: center; margin: 0 auto; display: flex;">
         <table width="100%" class="table table-striped table-hover " style="text-align: center">
             <tr>
                 <th scope="col">Id</th>
                 <th scope="col">Name</th>
                 <th scope="col">Year</th>
                 <th scope="col">Image</th>
                 <th scope="col">Show</th>
             </tr>
             @foreach (var tvShow in tvShowList)
             {
                 <tr scope="row">
                     <td class="align-middle" style="font-size: 20px">@tvShow.Id</td>
                     <td class="align-middle" style="font-size: 20px">@tvShow.Name</td>
                     <td class="align-middle" style="font-size: 20px">@tvShow.Year</td>
                     <td class="align-middle" style="font-size: 20px">
                         <img src="@tvShow.Image"  height="200px">
                     </td>
                     <td class="align-middle">
                         <a style="color: white" href="./details/@tvShow.Id">
                         <button class="btn btn-primary">Details</button>
                         </a><a style="color: white" href="./poster/@tvShow.Id">
                         <button class="btn btn-primary">Poster</button>
                         </a>
                     </td>
                 </tr>
             }
         </table>
     </div>
</div>
</body>
</html>