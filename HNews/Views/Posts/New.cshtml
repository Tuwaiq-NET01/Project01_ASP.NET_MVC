@{
    var newPosts = (IEnumerable<PostModel>) ViewBag.NewPosts;
}
<div class="container px-5">
    <div class="row gx-5 gy-4 align-items-center">
        @foreach (var post in newPosts)
        {
            <div class="card shadow-sm mx-auto my-4 post-card">
                <div class="card-header">
                    @if (@post.IconUrl == "")
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-slash-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M11.354 4.646a.5.5 0 0 0-.708 0l-6 6a.5.5 0 0 0 .708.708l6-6a.5.5 0 0 0 0-.708z"/>
                        </svg>
                    }
                    else
                    {
                        <img class="me-2" src="@post.IconUrl" alt="website icon"/>
                    }
                    <small class="light-gray"> @post.WebsiteName</small>
                    <small> by <a href="/users?username=@post.Author">@post.Author</a></small>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <a class="text-reset text-decoration-none" href="/posts?id=@post.Id"> @post.Title</a>  
                    </h5>
                    <div class="row">
                        <div class="col">
                            <p class="card-text fw-light fs-6">
                                @post.GetRelativePostDate()
                            </p>
                        </div>
                        <div class="col-md-auto fw-light">
                            @post.Score<i class="ps-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                            </svg></i>
                        </div>
                        <div class="col-md-auto pe-0 fw-light">
                            @post.CommentsCount<i class="ps-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-right" viewBox="0 0 16 16">
                                <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12z"/>
                            </svg></i>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>