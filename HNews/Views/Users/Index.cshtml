@{
    var user = (UserModel) ViewData["User"];
}

<div class="container px-5 my-6">
    <div class="row gx-5 align-items-center">
        <div class="card user-card mx-auto border-0">
            <div class="card-header">
                <h5 class="card-title">@user.Username</h5>
                <p class="card-text fw-normal fs-6 primary-color">@user.Karma Karma</p>
                <p class="card-text fw-light fs-6">Member since @user.FormattedCreatedAt</p>
                <p class="">
                    @Html.Raw((@user.About))
                </p>
            </div>
            <div class="card-body">
                @* <div>posts created bt user:</div> *@
            </div>
        </div>
    </div>
</div>